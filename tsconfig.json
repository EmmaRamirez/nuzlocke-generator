{
  "compilerOptions": {
      "target": "es6",
      "module": "esnext",
      "moduleResolution": "node",
      "declaration": false,
      "noImplicitAny": true,
      "removeComments": true,
      "strictNullChecks": true,
      "noImplicitReturns": true,
      "strictFunctionTypes": true,
      "noLib": false,
      "jsx": "react",
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": false,
      "esModuleInterop": true,
      "allowJs": true,
      "lib": [
        "dom",
        "dom.iterable",
        "ES2017",
        "ES2018",
        "ES2019",
        "ES2020",
      ],
      "typeRoots": [
        "./node_modules/@types"
      ],
      "baseUrl": "./src"
    },
    "include": [
        "./src"
    ],
    "exclude": [
      "node_modules",
      "./node_modules/@types",
    ],
    "compileOnSave": false
}
